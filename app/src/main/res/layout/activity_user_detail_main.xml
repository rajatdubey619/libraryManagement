<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_detail_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_conference_bg">

    <include
        android:id="@+id/toolbarHeader"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarHeader"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLogo"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Full Name"
                    android:inputType="textPersonName"

                    android:paddingLeft="70dp" />

                <EditText
                    android:id="@+id/etMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:hint="Mobile Number"
                    android:inputType="phone"

                    android:paddingLeft="70dp" />

                <EditText
                    android:id="@+id/etEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/mail2"
                    android:drawablePadding="10dp"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"

                    android:paddingLeft="70dp" />

                <EditText
                    android:id="@+id/etUnivId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/id_card_three"
                    android:drawablePadding="10dp"
                    android:hint="University Id"
                    android:inputType="textPersonName"

                    android:paddingLeft="70dp" />

                <TextView
                    android:id="@+id/tvBatchYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:paddingLeft="70dp"
                    android:text="@string/mm_dd_yyyy_batch_year"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/tvDOBYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:paddingLeft="70dp"
                    android:text="@string/mm_dd_yyyy_dob"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/etLoginUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Username"

                    android:paddingLeft="70dp" />

                <EditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etLoginUsername"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/keytwo"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="70dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:paddingLeft="90dp" />

                <!--<Button
                    android:id="@+id/btnDevMode"
                    android:layout_below="@+id/etLoginPassword"
                    android:layout_marginTop="8dp"
                    style="@style/ButtonLogin"
                    android:text="Dev Mode: On"
                    android:textSize="12dp"/>-->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
